            prefWidth="300.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.UserCreatorController">
    <center>
        <FlowPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="225.0" prefWidth="300.0">
                    <children>
                        <Label fx:id="userLoginLabel" text="Login">
                            <VBox.margin>
                                <Insets bottom="8.0" left="25.0" top="25.0"/>
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="userLoginTextField" maxWidth="250.0">
                            <VBox.margin>
                                <Insets bottom="50.0" left="25.0"/>
                            </VBox.margin>
                        </TextField>
                        <Label fx:id="userPassLabel" text="Password">
                            <VBox.margin>
                                <Insets bottom="8.0" left="25.0"/>
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="userPassTextField" maxWidth="250.0">
                            <VBox.margin>
                                <Insets left="25.0"/>
                            </VBox.margin>
                        </TextField>
                        <ListView fx:id="listViewItem" maxHeight="1.0" maxWidth="1.0" prefHeight="200.0"
                                  prefWidth="200.0"/>
                    </children>
                </VBox>
            </children>
        </FlowPane>
    </center>
    <bottom>
        <FlowPane prefHeight="75.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="userAddButton" mnemonicParsing="false" onAction="#addUser" text="Add">
                    <FlowPane.margin>
                        <Insets left="49.0" right="98.0" top="25.0"/>
                    </FlowPane.margin>
                </Button>
                <Button mnemonicParsing="false" text="Cancel">
                    <FlowPane.margin>
                        <Insets top="25.0"/>
                    </FlowPane.margin>
                </Button>
            </children>
        </FlowPane>
    </bottom>
</BorderPane>
